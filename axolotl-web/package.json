{
  "name": "axolotl-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "translate": "npm run translate-extract && npm run translate-update && npm run translate-compile",
    "translate-extract": "node ./node_modules/easygettext/src/extract-cli.js --attribute v-translate --output ../po/textsecure.nanuc.pot $(find src -type f -name '*.vue')",
    "translate-update": "cd ../po && find ./ -exec msgmerge --update {} textsecure.nanuc.pot \\;",
    "translate-remove-tmp": "cd ../po && ls ../po | grep -P '\\.po[~]{1}|\\.pot[~]{1}' | xargs -d'\n' rm || true",
    "translate-compile": "npm run translate-remove-tmp&&node ./node_modules/easygettext/src/compile-cli.js --output ./translations/translations.json $(find ../po/ -type f -name '*.po')"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/vue-fontawesome": "^0.1.10",
    "bootstrap": "^4.5.2",
    "bootstrap-vue": "^2.16.0",
    "core-js": "^2.6.11",
    "file-saver": "^2.0.2",
    "linkifyjs": "^2.1.8",
    "moment": "^2.27.0",
    "ofcold-security-code": "git+https://github.com/ofcold/security-code.git",
    "qrcode": "^1.4.4",
    "qwebchannel": "^5.9.0",
    "single-byte": "^1.0.7",
    "vue": "^2.6.11",
    "vue-chat-scroll": "^1.4.0",
    "vue-gettext": "^2.1.10",
    "vue-head": "^2.2.0",
    "vue-long-click": "0.0.4",
    "vue-native-websocket": "^2.0.14",
    "vue-password-strength-meter": "^1.7.2",
    "vue-phone-number-input": "^0.2.8",
    "vue-router": "^3.4.3",
    "vue-sanitize": "^0.2.1",
    "vue-socket.io": "^3.0.10",
    "vue-tel-input": "^3.3.0",
    "vuex": "^3.5.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^4.5.3",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.14.5",
    "easygettext": "^2.14.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "lintOnSave": false,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
